name: Update OpenCode

on:
  repository_dispatch:
    types: [opencode-release-detected]
  workflow_dispatch:

permissions:
  contents: write

jobs:
  update-version:
    runs-on: ubuntu-latest
    outputs:
      version: ${{ steps.version.outputs.VERSION }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.PERSONAL_ACCESS_TOKEN }}

      - name: Setup Nix
        uses: DeterminateSystems/nix-installer-action@main

      - name: Install nix-update
        run: nix profile install nixpkgs#nix-update

      - name: Update Version and Source Hash
        id: version
        run: |
          echo "▶ Updating version and source hash with nix-update..."
          nix-update --flake opencode --version=auto

          VERSION=$(grep -oP 'version = "\K[^"]+' package.nix | head -1)
          echo "VERSION=$VERSION" >> $GITHUB_OUTPUT
          echo "VERSION=$VERSION" >> $GITHUB_ENV
          echo "✓ Version and source hash updated to: $VERSION"

      - name: Upload updated package.nix
        uses: actions/upload-artifact@v4
        with:
          name: package-nix-version-updated
          path: package.nix

  build-hashes:
    needs: update-version
    strategy:
      matrix:
        include:
          - arch: x86_64-linux
            runner: ubuntu-latest
          - arch: aarch64-linux
            runner: ubuntu-24.04-arm
    runs-on: ${{ matrix.runner }}
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Download updated package.nix
        uses: actions/download-artifact@v4
        with:
          name: package-nix-version-updated

      - name: Setup Nix
        uses: DeterminateSystems/nix-installer-action@main

      - name: Build node_modules and Extract Hash for ${{ matrix.arch }}
        id: hash
        run: |
          echo "▶ Step 1: Building node_modules to discover correct hash for ${{ matrix.arch }}..."
          BUILD_LOG=$(nix build .#opencode.node_modules --system ${{ matrix.arch }} -L 2>&1) || true

          CORRECT_HASH=$(echo "$BUILD_LOG" | grep -oP 'got:\s+\Ksha256-[A-Za-z0-9+/=]+' | head -1)

          if [ -z "$CORRECT_HASH" ]; then
            echo "✗ Failed to extract ${{ matrix.arch }} node_modules hash"
            echo "$BUILD_LOG" | tail -100
            exit 1
          fi

          echo "✓ Discovered hash for ${{ matrix.arch }}: $CORRECT_HASH"

          echo "▶ Step 2: Updating hash in package.nix..."
          sed -i -E "s|(${{ matrix.arch }} = \")[^\"]*(\")|\\1$CORRECT_HASH\\2|" package.nix

          echo "▶ Step 3: Rebuilding node_modules with correct hash..."
          if ! nix build .#opencode.node_modules --system ${{ matrix.arch }} -L --rebuild; then
            echo "✗ Failed to rebuild node_modules for ${{ matrix.arch }}"
            exit 1
          fi
          echo "✓ node_modules rebuilt successfully"

          echo "▶ Step 4: Building full opencode package..."
          if ! nix build .#opencode --system ${{ matrix.arch }} -L; then
            echo "✗ Failed to build opencode package for ${{ matrix.arch }}"
            exit 1
          fi
          echo "✓ Full package built successfully for ${{ matrix.arch }}"

          # Save the hash for final commit
          echo "$CORRECT_HASH" > hash.txt

      - name: Upload hash for ${{ matrix.arch }}
        uses: actions/upload-artifact@v4
        with:
          name: hash-${{ matrix.arch }}
          path: hash.txt

  finalize:
    needs: [update-version, build-hashes]
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.PERSONAL_ACCESS_TOKEN }}

      - name: Download updated package.nix
        uses: actions/download-artifact@v4
        with:
          name: package-nix-version-updated

      - name: Download x86_64 hash
        uses: actions/download-artifact@v4
        with:
          name: hash-x86_64-linux
          path: hash-x86_64

      - name: Download aarch64 hash
        uses: actions/download-artifact@v4
        with:
          name: hash-aarch64-linux
          path: hash-aarch64

      - name: Configure Git
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"

      - name: Apply All Hashes and Commit
        run: |
          X86_HASH=$(cat hash-x86_64/hash.txt)
          ARM_HASH=$(cat hash-aarch64/hash.txt)

          echo "▶ Applying x86_64-linux hash: $X86_HASH"
          sed -i -E "s|(x86_64-linux = \")[^\"]*(\")|\\1$X86_HASH\\2|" package.nix

          echo "▶ Applying aarch64-linux hash: $ARM_HASH"
          sed -i -E "s|(aarch64-linux = \")[^\"]*(\")|\\1$ARM_HASH\\2|" package.nix

          VERSION="${{ needs.update-version.outputs.version }}"
          echo "▶ Checking for changes to package.nix..."
          
          if ! git diff --quiet package.nix; then
            echo "✓ Changes detected. Committing and pushing..."
            git add package.nix
            git commit -m "Update OpenCode to $VERSION" \
              -m "Automated update with verified builds" \
              -m "- Version and source hash updated via nix-update" \
              -m "- Node modules hashes verified and built successfully" \
              -m "- Full package builds verified (x86_64 & aarch64)"
            
            git tag -f "v$VERSION"
            
            echo "▶ Synchronizing with remote branch..."
            git pull origin master --rebase
            
            echo "▶ Pushing changes to remote..."
            git push origin HEAD:master
            git push -f origin "v$VERSION"
            
            echo "✓ Update complete!"
          else
            echo "✓ No changes to package.nix. Repository is already up-to-date."
          fi

